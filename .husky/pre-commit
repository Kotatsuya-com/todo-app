#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit quality checks..."

# Try to auto-fix lint issues first
echo "ğŸ“ Auto-fixing lint issues..."
npm run lint:fix

# Run strict lint check
echo "âš¡ Running strict lint check..."
if ! npm run lint:strict; then
  echo "âŒ ESLint found issues that could not be auto-fixed."
  echo "ğŸ’¡ Please review the errors above and fix them manually."
  echo "ğŸ”§ You can run 'npm run lint:fix' to auto-fix some issues."
  exit 1
fi

# Run production-focused type check (excludes test files)
echo "ğŸ” Running TypeScript type check (production code)..."
if ! npm run type-check:prod; then
  echo "âŒ TypeScript found type errors in production code."
  echo "ğŸ’¡ Please fix the type errors above before committing."
  echo "ğŸ“ Note: Test files are checked separately with 'npm run type-check:test'"
  exit 1
fi

echo "âœ… All quality checks passed!"
